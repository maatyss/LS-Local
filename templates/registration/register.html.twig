{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="flex flex-col gap-20">

        {{ form_start(registrationForm, {attr: {class: 'flex flex-col mt-10 w-2/5 mx-auto py-10 px-10 rounded-2xl bg-silver text-black'}}) }}
        <h2 class="text-4xl font-medium text-center">Inscription</h2>

        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.name) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}

        <div class="flex justify-between items-center">

            <div class="flex flex-col mt-12">

                {{ form_row(registrationForm.agreeTerms) }}

                <p class="w-2/3 pl-4 mt-4">* Toute inscription est révisée, l'accès à cet applications est strictement limité aux personnes autorisées</p>

            </div>

            <button class="justify-self-end block w-fit h-fit mt-12 text-xl bg-electric-blue px-4 py-4 rounded-lg hover:brightness-[80%]" formnovalidate>Inscription</button>
        </div>


        {{ form_end(registrationForm) }}
    </div>


{% endblock %}
